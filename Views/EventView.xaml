<UserControl x:Class="PRN212_Project.Views.EventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">

    <StackPanel Margin="20" Background="#f4f6fa">

        <!-- Tiêu đề -->
        <TextBlock Text="Event Management"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="DarkSlateBlue"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Danh sách sự kiện -->
        <DataGrid x:Name="lvEvents"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectionChanged="lvEvents_SelectionChanged"
                  Height="200"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EventId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding EventName}" Width="150"/>
                <DataGridTextColumn Header="Start" Binding="{Binding StartTime}" Width="150"/>
                <DataGridTextColumn Header="End" Binding="{Binding EndTime}" Width="150"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form chi tiết -->
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="ID:" Width="80"/>
                <TextBox x:Name="txtId" Width="200"
                         IsReadOnly="True"
                         Text="{Binding ElementName=lvEvents, Path=SelectedItem.EventId, Mode=OneWay}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Name:" Width="80"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Start Time:" Width="80"/>
                <DatePicker x:Name="dpStartTime" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="End Time:" Width="80"/>
                <DatePicker x:Name="dpEndTime" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Location:" Width="80"/>
                <TextBox x:Name="txtLocation" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Status:" Width="80"/>
                <TextBox x:Name="txtStatus" Width="200"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="New" Width="80" Margin="0,0,10,0" Click="btnNew_Click"/>
                <Button Content="Create" Width="80" Margin="0,0,10,0" Click="btnCreate_Click"/>
                <Button Content="Save" Width="80" Click="btnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
